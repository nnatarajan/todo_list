<h1>Todos</h1>
    <ul>
    <% @todos.each do |todo|%>
        <li>
            <%= todo.name %>
            <% link_to 'index', todo_path(todo) %>
            <%= link_to 'Show', todo %></td>
            <%= link_to 'Edit', edit_todo_path(todo) %></td>
            <%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
    <% end %>
    </ul>
